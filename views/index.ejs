    <section class="ratings" id="ratings">
        <div class="ratings__container">
            <div class="section-header">
                <div class="section-badge neu-badge">
                    <i class="fas fa-star"></i>
                    <span>Ratings</span>
                </div>
                <h2 class="section-title">Player Feedback</h2>
                <p class="section-subtitle">Latest 9 ratings (older ones will be hidden)</p>
            </div>

            <div class="ratings__layout">
                <div class="neu-card neu-card--raised ratings__panel">
                    <div class="ratings__panel-head">
                        <h3 class="ratings__panel-title">Latest</h3>
                        <button type="button" class="neu-btn neu-btn--inset" id="ratingsRefreshBtn" title="Refresh latest ratings">
                            <i class="fa-solid fa-rotate-right"></i>
                            <span>Refresh</span>
                        </button>
                    </div>

                    <div class="ratings__list" id="ratingsList">
                        <% const __ratings = (typeof latestRatings !== 'undefined' && Array.isArray(latestRatings)) ? latestRatings : []; %>
                        <% if (__ratings.length) { %>
                            <% __ratings.forEach((r) => { %>
                                <div class="neu-card neu-card--inset ratings__item" data-userid="<%= r.roblox_user_id || '' %>">
                                    <div class="ratings__item-top">
                                        <div class="ratings__user">
                                            <i class="fa-solid fa-user ratings__user-icon"></i>
                                            <span class="ratings__username"><%= r.roblox_username || (r.roblox_user_id ? ('User ' + r.roblox_user_id) : 'Unknown') %></span>
                                        </div>
                                        <div class="ratings__score"><%= (typeof r.rating === 'number') ? r.rating.toFixed(1).replace(/\.0$/, '') : (r.rating || 0) %>/10</div>
                                    </div>
                                    <div class="ratings__message"><%= r.message || '' %></div>
                                    <div class="ratings__member"><%= r.user_number ? (' Discord Member : ' + r.user_number) : '' %></div>
                                    <div class="ratings__time"><%= r.updated_at ? new Date(r.updated_at).toLocaleString() : ''%></div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div class="ratings__empty">No ratings yet.</div>
                        <% } %>
                    </div>

                    <div class="ratings__note">Showing only the latest 9.</div>
                </div>

                <div class="neu-card neu-card--raised ratings__panel">
                    <div class="ratings__panel-head">
                        <h3 class="ratings__panel-title">Find a Rating</h3>
                    </div>

                    <form class="ratings__form" id="ratingSearchForm" autocomplete="off" action="javascript:void(0)">
                        <div class="ratings__row">
                            <input class="ratings__input" id="ratingSearchInput" type="text" placeholder="Roblox username / Roblox user id / Discord member" maxlength="40" required>
                            <button class="neu-btn neu-btn--raised" type="button" id="ratingSearchBtn">
                                <i class="fa-solid fa-magnifying-glass"></i>
                                <span>Search</span>
                            </button>
                        </div>
                    </form>

                    <div class="ratings__result" id="ratingSearchResult"></div>

                    <div class="ratings__divider"></div>

                    <div class="ratings__panel-head">
                        <h3 class="ratings__panel-title">Leave a Rating</h3>
                    </div>

                    <% if (typeof auth !== 'undefined' && auth && auth.username) { %>
                        <form class="ratings__form" id="ratingCreateForm">
