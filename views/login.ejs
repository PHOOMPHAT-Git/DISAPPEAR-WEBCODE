<!DOCTYPE html>
<html class="preload" lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Disappear | Login</title>
    <link rel="icon" type="image/png" href="/img/NEXORIA_GOLD_LOGO.png?v=2"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+Thai:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="stylesheet/login.css">
    <link rel="stylesheet" href="stylesheet/addon/scrollbar.css">
    <link rel="stylesheet" href="stylesheet/addon/dropdown.css">
    <script src="/javascript/addon/loader.js"></script>
    <script src="/javascript/addon/changepage.js"></script>
    <script src="/javascript/addon/security.js"></script>
    <style id="preload-cover-style">
        html.preload::before{
            content:"";
            position:fixed;
            inset:0;
            background:#303030;
            z-index:999998;
            opacity:1;
            pointer-events:none;
        }
    </style>
</head>
<body>
    <nav class="nav">
        <div class="nav__container">
            <div class="nav__logo">
                <span class="nav__logo-text">DISAPPEAR</span>
            </div>
            <%- include('partials/pc/menu') %>
            <% const __isAuthed = (typeof auth !== 'undefined' && auth && auth.username); %>

            <% if (__isAuthed) { %>
                <div class="nav__auth" data-auth-menu="wrap">
                    <button type="button" class="nav__cta neu-btn neu-btn--raised nav__auth-btn" data-auth-menu="btn" aria-haspopup="true" aria-expanded="false">
                        <i class="fa-solid fa-user"></i>
                        <span><%= (auth && auth.username && auth.username.length > 10) ? (auth.username.slice(0, 10) + '...') : (auth && auth.username ? auth.username : '') %></span>
                        <i class="fa-solid fa-chevron-down nav__auth-caret"></i>
                    </button>

                    <div class="nav__auth-menu" data-auth-menu="menu" role="menu" aria-hidden="true">
                        <%- include('partials/pc/dropdown') %>
                    </div>
                </div>
            <% } else { %>
                <a href="/login" class="nav__cta neu-btn neu-btn--raised">
                    <i class="fa-solid fa-right-to-bracket"></i>
                    <span>Login</span>
                </a>
            <% } %>
            <button class="nav__hamburger" id="hamburger">
                <i class="fas fa-bars hamburger-open"></i>
                <i class="fas fa-xmark hamburger-close"></i>
            </button>
        </div>
    </nav>

    <div class="mobile-menu" id="mobileMenu">
        <%- include('partials/mobile/menu') %>
        <% const __isAuthedMb = (typeof auth !== 'undefined' && auth && auth.username); %>

        <% if (__isAuthedMb) { %>
            <div class="mobile-auth" data-auth-menu="wrap">
                <button type="button" class="neu-btn neu-btn--raised mobile-menu__cta mobile-auth__btn" data-auth-menu="btn" aria-haspopup="true" aria-expanded="false">
                    <i class="fa-solid fa-user"></i>
                    <span><%= (auth && auth.username && auth.username.length > 15) ? (auth.username.slice(0, 15) + '...') : (auth && auth.username ? auth.username : '') %></span>
                    <i class="fa-solid fa-chevron-down nav__auth-caret"></i>
                </button>

                <div class="mobile-auth__menu" data-auth-menu="menu" role="menu" aria-hidden="true">
                    <%- include('partials/mobile/dropdown') %>
                </div>
            </div>
        <% } else { %>
            <a href="/login" class="neu-btn neu-btn--raised mobile-menu__cta">
                <i class="fa-solid fa-right-to-bracket"></i>
                <span>Login</span>
            </a>
        <% } %>
    </div>

    <main class="login">
        <div class="login__container">
            <div class="neu-card neu-card--raised login__card">
                <div class="login__header">
                    <div class="neu-badge">
                        <i class="fa-solid fa-user-lock"></i>
                        <span>Login</span>
                    </div>
                    <h1 class="login__title">Member Verification</h1>
                    <p class="login__subtitle">Enter your Roblox username and token.</p>
                </div>

                <% if (error) { %>
                    <div class="alert"><%= error %></div>
                <% } %>

                <form action="/login" method="POST" class="login__form">
                    <div class="form-group">
                        <label class="form-label" for="robloxusername">Roblox Username</label>
                        <input class="form-input" id="robloxusername" name="robloxusername" type="text" autocomplete="username" value="<%= robloxusername || '' %>" required>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="token">Token</label>
                        <input class="form-input" id="token" name="token" type="text" autocomplete="off" maxlength="14" value="<%= token || '' %>" required>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="neu-btn neu-btn--raised neu-btn--gold">
                            <i class="fa-solid fa-right-to-bracket"></i>
                            <span>Verify</span>
                        </button>
                        <a href="/" class="neu-btn neu-btn--inset">
                            <i class="fa-solid fa-house"></i>
                            <span>Back</span>
                        </a>
                    </div>
                </form>

                <% if (showDiscord) { %>
                    <div class="login__divider"></div>
                    <div class="login__alt">
                        <p class="login__alt-text">Not found in database. Please join Discord to get verified.</p>
                        <a class="neu-btn neu-btn--raised" href="<%= discordUrl || '#' %>" target="_blank" rel="noopener">
                            <i class="fab fa-discord"></i>
                            <span>Join Discord</span>
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script src="/javascript/addon/interface.js"></script>
    <script src="/javascript/addon/dropdown.js"></script>
</body>
</html>